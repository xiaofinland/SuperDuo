<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/result_view_height"
    android:layout_margin="@dimen/match_view_margin_main"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/home_team_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/match_view_margin_main"
        android:layout_marginLeft="@dimen/match_view_margin_main"
        android:layout_marginTop="@dimen/match_view_margin_large"
        android:layout_weight="0.23"
        android:contentDescription="@string/home_team_name"
        android:gravity="end"
        android:text="Liverpool"
        android:textSize="@dimen/match_team_name_text_size" />

    <ImageView
        android:id="@+id/home_team_flag"
        android:layout_width="0dp"
        android:layout_height="@dimen/match_team_flag_height"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/match_view_margin_small"
        android:layout_marginTop="@dimen/match_view_margin_small"
        android:layout_weight="0.14"
        android:contentDescription="@string/home_team_logo"
        android:gravity="end"
        android:src="@drawable/no_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.19"
        android:orientation="vertical">

        <TextView
            android:id="@+id/match_result"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/match_view_margin_large"
            android:textSize="@dimen/match_result_text_size"
            android:visibility="visible" />

        <TextView
            android:id="@+id/match_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/match_view_margin_xsmall"
            android:textSize="@dimen/match_time_text_size"
            android:visibility="visible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/away_team_flag"
        android:layout_width="0dp"
        android:layout_height="@dimen/match_team_flag_height"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/match_view_margin_small"
        android:layout_marginTop="@dimen/match_view_margin_small"
        android:layout_weight="0.14"
        android:contentDescription="@string/away_team_logo"
        android:gravity="start"
        android:src="@drawable/no_image" />

    <TextView
        android:id="@+id/away_team_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/match_view_margin_main"
        android:layout_marginLeft="@dimen/match_view_margin_main"
        android:layout_marginTop="@dimen/match_view_margin_large"
        android:layout_weight="0.23"
        android:contentDescription="@string/away_team_name"
        android:gravity="start"
        android:text="Chelsea"
        android:textSize="@dimen/match_team_name_text_size" />

</LinearLayout>