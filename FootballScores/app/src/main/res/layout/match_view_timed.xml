<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/home_team_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_weight="0.23"
        android:contentDescription="@string/home_team_name"
        android:gravity="end"
        android:text="Liverpool"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/home_team_flag"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.14"
        android:contentDescription="@string/home_team_logo"
        android:gravity="end"
        android:src="@drawable/no_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.19"
        android:orientation="vertical">

        <TextView
            android:id="@+id/match_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:textSize="13sp"
            android:visibility="visible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/away_team_flag"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.14"
        android:contentDescription="@string/away_team_logo"
        android:gravity="start"
        android:src="@drawable/no_image" />

    <TextView
        android:id="@+id/away_team_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_weight="0.23"
        android:contentDescription="@string/away_team_name"
        android:gravity="start"
        android:text="Chelsea"
        android:textSize="12sp" />

</LinearLayout>